<Window x:Name="window" x:Class="Daytimer.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:Daytimer"
		xmlns:ext="clr-namespace:Microsoft.Windows.Shell;assembly=Microsoft.Windows.Shell"
		xmlns:Controls="clr-namespace:Daytimer.Controls;assembly=Daytimer.Controls"
		xmlns:Display="clr-namespace:Daytimer.Controls.Panes;assembly=Daytimer.Controls"
		xmlns:Ribbon="clr-namespace:Microsoft.Windows.Controls.Ribbon;assembly=RibbonControlsLibrary"
		xmlns:RibbonControls="clr-namespace:Daytimer.Controls.Ribbon;assembly=Daytimer.Controls"
		xmlns:Dock="clr-namespace:Daytimer.DockableDialogs;assembly=Daytimer.DockableDialogs"
		xmlns:fundamentals="clr-namespace:Daytimer.Fundamentals;assembly=Daytimer.Fundamentals"
		xmlns:System="clr-namespace:System;assembly=mscorlib" Title="Dimension 4" Height="550" Width="900"
		MinHeight="400" MinWidth="400" UseLayoutRounding="True" TextOptions.TextFormattingMode="Display"
		Loaded="window_Loaded" FontFamily="Segoe UI, /Daytimer.Fonts;component/#WeblySleek UI Normal" FontSize="12"
		FontWeight="Normal" Icon="pack://application:,,,/logo.ico" ShowActivated="True"
		TextOptions.TextRenderingMode="ClearType" WindowStartupLocation="Manual" Background="{DynamicResource White}"
		Foreground="{DynamicResource Black}">
	<ext:WindowChrome.WindowChrome>
		<ext:WindowChrome GlassFrameThickness="0" CornerRadius="0" UseAeroCaptionButtons="False" CaptionHeight="150" />
	</ext:WindowChrome.WindowChrome>
	<Window.Resources>
		<fundamentals:WindowIconConverter x:Key="WindowIconConverter" />
	</Window.Resources>
	<Grid x:Name="outerGrid" Background="{DynamicResource White}" IsHitTestVisible="False">
		<Grid ClipToBounds="True" VerticalAlignment="Top" HorizontalAlignment="Right" Height="54"
				Visibility="{DynamicResource BackgroundVisibility}" IsHitTestVisible="False">
			<Image x:Name="copyBackgroundImage" HorizontalAlignment="Right" />
			<Image x:Name="backgroundImage" HorizontalAlignment="Right" />
		</Grid>
		<Grid x:Name="captionGrid" VerticalAlignment="Top" Height="31" Margin="1,0">
			<Grid.ColumnDefinitions>
				<!-- Icon -->
				<ColumnDefinition Width="34" />
				<!-- QAT -->
				<ColumnDefinition Width="Auto" />
				<!-- Title -->
				<ColumnDefinition Width="*" />
				<!-- Help -->
				<ColumnDefinition Width="29" />
				<!-- Ribbon Display Options -->
				<ColumnDefinition Width="29" />
				<!-- Minimize -->
				<ColumnDefinition Width="29" />
				<!-- Maximize/Restore -->
				<ColumnDefinition Width="29" />
				<!-- Close -->
				<ColumnDefinition Width="29" />
			</Grid.ColumnDefinitions>
			<Button x:Name="captionImg" PreviewMouseDoubleClick="captionImg_PreviewMouseDoubleClick" MinWidth="0"
					Width="NaN" Height="NaN" PreviewMouseLeftButtonDown="captionImg_PreviewMouseLeftButtonDown"
					MouseRightButtonUp="captionImg_MouseRightButtonUp" ext:WindowChrome.IsHitTestVisibleInChrome="True"
					Focusable="False">
				<Button.Template>
					<ControlTemplate TargetType="Button">
						<Border Background="Transparent">
							<ContentPresenter IsHitTestVisible="False" />
						</Border>
					</ControlTemplate>
				</Button.Template>
				<Image Source="{Binding Icon, ElementName=window, Converter={StaticResource WindowIconConverter}}"
						HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="16" Stretch="None"
						Margin="0,-1,0,0" />
			</Button>
			<Button x:Name="helpButton" Style="{StaticResource CaptionButton}" Grid.Column="3"
					Content="{StaticResource HelpButtonKey}"
					Foreground="{Binding Foreground, ElementName=minimizeButton}"
					Margin="{Binding Margin, ElementName=minimizeButton}" ToolTip="Dimension 4 Help (F1)" Tag="1"
					Command="local:MainWindow.HelpCommand" />
			<ToggleButton x:Name="ribbonDisplayOptionsButton" Style="{StaticResource CaptionButton}" Grid.Column="4"
					Content="{StaticResource RibbonDisplayOptionsButtonKey}"
					Foreground="{Binding Foreground, ElementName=minimizeButton}"
					Margin="{Binding Margin, ElementName=minimizeButton}" ToolTip="Ribbon Display Options" Tag="1" />
			<Popup x:Name="ribbonDisplayOptionsPopup" Placement="Bottom"
					PlacementTarget="{Binding ElementName=ribbonDisplayOptionsButton}"
					IsOpen="{Binding IsChecked, ElementName=ribbonDisplayOptionsButton}" PopupAnimation="Fade"
					AllowsTransparency="True" SnapsToDevicePixels="True" StaysOpen="False"
					Opened="ribbonDisplayOptionsPopup_Opened">
				<Popup.Style>
					<Style TargetType="Popup">
						<Style.Triggers>
							<Trigger Property="IsOpen" Value="True">
								<Trigger.EnterActions>
									<BeginStoryboard>
										<Storyboard>
											<DoubleAnimation Storyboard.TargetProperty="VerticalOffset" From="-30"
													To="0" Duration="0:0:0.4">
												<DoubleAnimation.EasingFunction>
													<QuarticEase />
												</DoubleAnimation.EasingFunction>
											</DoubleAnimation>
										</Storyboard>
									</BeginStoryboard>
								</Trigger.EnterActions>
							</Trigger>
						</Style.Triggers>
					</Style>
				</Popup.Style>
				<Border x:Name="OuterBorder">
					<Border.CacheMode>
						<BitmapCache />
					</Border.CacheMode>
					<Border.Effect>
						<DropShadowEffect Color="#FFBBBBBB" ShadowDepth="0" RenderingBias="Performance" Opacity="0.5" />
					</Border.Effect>
					<Border x:Name="InnerBorder" BorderBrush="#FFC6C6C6" BorderThickness="1"
							Background="{DynamicResource White}" Margin="5">
						<Border x:Name="ItemsPresenter" Margin="1">
							<Grid>
								<Grid.RowDefinitions>
									<RowDefinition />
									<RowDefinition />
									<RowDefinition />
								</Grid.RowDefinitions>
								<Grid.Resources>
									<Style TargetType="RadioButton">
										<Setter Property="Background" Value="Transparent" />
										<Setter Property="GroupName" Value="_ribbonDisplayOptionsRadios" />
										<Setter Property="Width" Value="240" />
										<Setter Property="Height" Value="58" />
										<Setter Property="Foreground" Value="#FF5E5E5E" />
										<EventSetter Event="Click" Handler="ribbonStateRadio_Click" />
										<Setter Property="Template">
											<Setter.Value>
												<ControlTemplate TargetType="RadioButton">
													<Border x:Name="PART_Border" BorderThickness="2"
															BorderBrush="{Binding Background, RelativeSource={RelativeSource Self}}"
															Background="{TemplateBinding Background}">
														<ContentPresenter />
													</Border>
													<ControlTemplate.Triggers>
														<Trigger Property="IsMouseOver" Value="True">
															<Setter Property="Background"
																	Value="{DynamicResource RibbonChecked}" />
														</Trigger>
														<Trigger Property="IsChecked" Value="True">
															<Setter Property="BorderBrush" TargetName="PART_Border"
																	Value="{DynamicResource RibbonChecked}" />
														</Trigger>
														<Trigger Property="IsEnabled" Value="False">
															<Setter Property="Opacity" TargetName="PART_Border"
																	Value="0.5" />
														</Trigger>
													</ControlTemplate.Triggers>
												</ControlTemplate>
											</Setter.Value>
										</Setter>
									</Style>
								</Grid.Resources>
								<RadioButton x:Name="hideRibbonRadio" IsEnabled="False">
									<Grid VerticalAlignment="Center">
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="Auto" />
											<ColumnDefinition />
										</Grid.ColumnDefinitions>
										<Grid.RowDefinitions>
											<RowDefinition Height="Auto" />
											<RowDefinition />
										</Grid.RowDefinitions>
										<Image Grid.RowSpan="2" Margin="6,6,9,6" Stretch="None"
												Source="pack://application:,,,/Daytimer.Images;component/Images/autohideribbon.png" />
										<TextBlock Grid.Column="1" FontWeight="Bold" Text="Auto-hide Ribbon" />
										<TextBlock Grid.Column="1" Grid.Row="1" TextWrapping="Wrap"
												Text="Hide the Ribbon. Click at the top of the application to show it." />
									</Grid>
								</RadioButton>
								<RadioButton x:Name="showRibbonTabsRadio" Grid.Row="1">
									<Grid VerticalAlignment="Center">
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="Auto" />
											<ColumnDefinition />
										</Grid.ColumnDefinitions>
										<Grid.RowDefinitions>
											<RowDefinition Height="Auto" />
											<RowDefinition />
										</Grid.RowDefinitions>
										<Image Grid.RowSpan="2" Margin="6,6,9,6" Stretch="None"
												Source="pack://application:,,,/Daytimer.Images;component/Images/showtabs.png" />
										<TextBlock Grid.Column="1" FontWeight="Bold" Text="Show Tabs" />
										<TextBlock Grid.Column="1" Grid.Row="1" TextWrapping="Wrap"
												Text="Show Ribbon tabs only. Click a tab to show the commands." />
									</Grid>
								</RadioButton>
								<RadioButton x:Name="showRibbonRadio" Grid.Row="2">
									<Grid VerticalAlignment="Center">
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="Auto" />
											<ColumnDefinition />
										</Grid.ColumnDefinitions>
										<Grid.RowDefinitions>
											<RowDefinition Height="Auto" />
											<RowDefinition />
										</Grid.RowDefinitions>
										<Image Grid.RowSpan="2" Margin="6,6,9,6" Stretch="None"
												Source="pack://application:,,,/Daytimer.Images;component/Images/showtabscommands.png" />
										<TextBlock Grid.Column="1" FontWeight="Bold" Text="Show Tabs and Commands" />
										<TextBlock Grid.Column="1" Grid.Row="1" TextWrapping="Wrap"
												Text="Show Ribbon tabs and commands all the time." />
									</Grid>
								</RadioButton>
							</Grid>
						</Border>
					</Border>
				</Border>
			</Popup>
			<Button x:Name="minimizeButton" Style="{StaticResource CaptionButton}" Grid.Column="5"
					Content="{StaticResource MinimizeButtonKey}" Foreground="#FFB2B2B2" Click="minimizeButton_Click"
					ToolTip="Minimize" Tag="2" />
			<Button x:Name="maximizeRestoreButton" Style="{StaticResource CaptionButton}" Grid.Column="6"
					ToolTip="Maximize" Foreground="{Binding Foreground, ElementName=minimizeButton}"
					Click="maximizeRestoreButton_Click" Tag="1" Margin="{Binding Margin, ElementName=minimizeButton}" />
			<Button x:Name="closeButton" Style="{StaticResource CaptionButton}" Grid.Column="7"
					Content="{StaticResource CloseButtonKey}" Click="closeButton_Click"
					Foreground="{Binding Foreground, ElementName=minimizeButton}" ToolTip="Close" Tag="2"
					Margin="{Binding Margin, ElementName=minimizeButton}" />
		</Grid>
		<Grid x:Name="clientGrid" Margin="1,31,1,1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Ribbon:Ribbon x:Name="ribbon" Background="{x:Null}" BorderBrush="{DynamicResource RibbonBorder}"
					IsMinimized="False" Panel.ZIndex="100" MouseOverBackground="{DynamicResource RibbonMouseOver}"
					MouseOverBorderBrush="{DynamicResource RibbonMouseOver}"
					PressedBackground="{DynamicResource RibbonPressed}"
					PressedBorderBrush="{DynamicResource RibbonPressed}"
					CheckedBackground="{DynamicResource RibbonChecked}"
					CheckedBorderBrush="{DynamicResource RibbonChecked}"
					FocusedBackground="{DynamicResource RibbonMouseOver}"
					FocusedBorderBrush="{DynamicResource RibbonMouseOver}"
					KeyTipService.KeyTipStyle="{StaticResource KeyTipStyle}" Title="{Binding Title, ElementName=window}"
					Margin="0,-30,0,0" Grid.ColumnSpan="2">
				<Ribbon:Ribbon.ApplicationMenu>
					<Ribbon:RibbonApplicationMenu x:Name="ribbonApplicationMenu" IsMainMenu="True" KeyTip="F" />
				</Ribbon:Ribbon.ApplicationMenu>
				<Ribbon:Ribbon.QuickAccessToolBar>
					<Ribbon:RibbonQuickAccessToolBar x:Name="ribbonQAT">
						<!--<Ribbon:RibbonQuickAccessToolBar.CustomizeMenuButton>
							<Ribbon:RibbonMenuButton>
							</Ribbon:RibbonMenuButton>
						</Ribbon:RibbonQuickAccessToolBar.CustomizeMenuButton>-->
					</Ribbon:RibbonQuickAccessToolBar>
				</Ribbon:Ribbon.QuickAccessToolBar>
				<Ribbon:Ribbon.ContextualTabGroups>
					<Ribbon:RibbonContextualTabGroup x:Name="calendarTools" Header="CALENDAR TOOLS"
							BorderBrush="#FF49A349" Background="#FFE6F3E6" Foreground="#FF118A11" />
					<Ribbon:RibbonContextualTabGroup x:Name="tasksTools" Header="TASKS TOOLS" BorderBrush="#FFC9599C"
							Background="#FFFCF0F7" Foreground="#FFA2437C" />
					<Ribbon:RibbonContextualTabGroup x:Name="peopleTools" Header="PEOPLE TOOLS" BorderBrush="#FFFF9D00"
							Background="#FFFFF8ED" Foreground="#FFD05E0E" />
					<Ribbon:RibbonContextualTabGroup x:Name="textTools" Header="TEXT TOOLS" BorderBrush="#FFF2CB1D"
							Background="#FFFFFBE6" Foreground="#FF9A7918" />
				</Ribbon:Ribbon.ContextualTabGroups>
				<!-- Ribbon Tabs for Appointments -->
				<Ribbon:RibbonTab x:Name="apptsHome" Header="HOME" KeyTip="H">
					<Ribbon:RibbonGroup Header="New"
							SmallImageSource="pack://application:,,,/Daytimer.Images;component/Images/new_sml.png">
						<Ribbon:RibbonButton Label="New Appointment" ToolTipTitle="New Appointment (Ctrl+N)"
								ToolTipDescription="Create a new appointment."
								LargeImageSource="pack://application:,,,/Daytimer.Images;component/Images/newappointment.png"
								SmallImageSource="pack://application:,,,/Daytimer.Images;component/Images/newappointment_sml.png"
								Command="local:MainWindow.NewItemCommand" />
						<Ribbon:RibbonSplitButton x:Name="newItems" Label="New Items" ToolTipTitle="New Items"
								ToolTipDescription="Create a new item, such as a new task or contact."
								LargeImageSource="pack://application:,,,/Daytimer.Images;component/Images/new.png"
								SmallImageSource="pack://application:,,,/Daytimer.Images;component/Images/new_sml.png"
								Command="local:MainWindow.NewItemDialogCommand">
							<Ribbon:RibbonGallery MaxColumnCount="1">
								<Ribbon:RibbonGalleryCategory>
									<MenuItem Header="_Appointment" Command="local:MainWindow.NewAppointmentCommand">
										<MenuItem.Icon>
											<Image
													Source="pack://application:,,,/Daytimer.Images;component/Images/newappointment_sml.png" />
										</MenuItem.Icon>
										<MenuItem.ToolTip>
											<Ribbon:RibbonToolTip Title="New Appointment (Ctrl+Shift+A)"
													Description="Create a new appointment." />
										</MenuItem.ToolTip>
									</MenuItem>
									<MenuItem Header="_Contact" Command="local:MainWindow.NewContactCommand">
										<MenuItem.Icon>
											<Image
													Source="pack://application:,,,/Daytimer.Images;component/Images/newcontact_sml.png" />
										</MenuItem.Icon>
										<MenuItem.ToolTip>
											<Ribbon:RibbonToolTip Title="New Contact (Ctrl+Shift+C)"
													Description="Create a new contact." />
										</MenuItem.ToolTip>
									</MenuItem>
									<MenuItem Header="_Task" Command="local:MainWindow.NewTaskCommand">
										<MenuItem.Icon>
											<Image
													Source="pack://application:,,,/Daytimer.Images;component/Images/newtask_sml.png" />
										</MenuItem.Icon>
										<MenuItem.ToolTip>
											<Ribbon:RibbonToolTip Title="New Task (Ctrl+Shift+T)"
													Description="Create a new task." />
										</MenuItem.ToolTip>
									</MenuItem>
									<MenuItem Header="_Note" Command="local:MainWindow.NewNoteCommand">
										<MenuItem.Icon>
											<Image
													Source="pack://application:,,,/Daytimer.Images;component/Images/newnote_sml.png" />
										</MenuItem.Icon>
										<MenuItem.ToolTip>
											<Ribbon:RibbonToolTip Title="New Note (Ctrl+Shift+E)"
													Description="Create a new note." />
										</MenuItem.ToolTip>
									</MenuItem>
								</Ribbon:RibbonGalleryCategory>
							</Ribbon:RibbonGallery>
						</Ribbon:RibbonSplitButton>
					</Ribbon:RibbonGroup>
					<Ribbon:RibbonGroup Header="Go To"
							SmallImageSource="pack://application:,,,/Daytimer.Images;component/Images/today_sml.png">
						<Ribbon:RibbonButton x:Name="today" Label="Today" ToolTipTitle="Today"
								ToolTipDescription="Show today in the calendar."
								LargeImageSource="pack://application:,,,/Daytimer.Images;component/Images/today.png"
								SmallImageSource="pack://application:,,,/Daytimer.Images;component/Images/today_sml.png"
								Click="today_Click" />
						<Ribbon:RibbonButton x:Name="next7Days" Label="Next 7 Days" ToolTipTitle="Next 7 Days"
								ToolTipDescription="Show the next 7 days in the calendar."
								LargeImageSource="pack://application:,,,/Daytimer.Images;component/Images/next7days.png"
								SmallImageSource="pack://application:,,,/Daytimer.Images;component/Images/next7days_sml.png"
								Click="next7Days_Click" />
						<Ribbon:RibbonToggleButton x:Name="specificDate" Label="Date" ToolTipTitle="Date"
								ToolTipDescription="Show a specific date in the calendar."
								LargeImageSource="pack://application:,,,/Daytimer.Images;component/Images/gotodate.png"
								SmallImageSource="pack://application:,,,/Daytimer.Images;component/Images/gotodate_sml.png"
								Checked="specificDate_Checked" />
					</Ribbon:RibbonGroup>
					<Ribbon:RibbonGroup Header="Arrange"
							SmallImageSource="pack://application:,,,/Daytimer.Images;component/Images/week_sml.png">
						<Ribbon:RibbonRadioButton x:Name="dayButton" Label="Day" ToolTipTitle="Day (Ctrl+Alt+1)"
								ToolTipDescription="Show the daily view."
								LargeImageSource="pack://application:,,,/Daytimer.Images;component/Images/day.png"
								SmallImageSource="pack://application:,,,/Daytimer.Images;component/Images/day_sml.png"
								Checked="dayButton_Checked" />
						<Ribbon:RibbonRadioButton x:Name="weekButton" Label="Week" ToolTipTitle="Week (Ctrl+Alt+2)"
								ToolTipDescription="Show the entire week."
								LargeImageSource="pack://application:,,,/Daytimer.Images;component/Images/week.png"
								SmallImageSource="pack://application:,,,/Daytimer.Images;component/Images/week_sml.png"
								Checked="weekButton_Checked" />
						<Ribbon:RibbonRadioButton x:Name="monthButton" Label="Month" ToolTipTitle="Month (Ctrl+Alt+3)"
								ToolTipDescription="Show the month."
								LargeImageSource="pack://application:,,,/Daytimer.Images;component/Images/month.png"
								SmallImageSource="pack://application:,,,/Daytimer.Images;component/Images/month_sml.png"
								Checked="monthButton_Checked" />
					</Ribbon:RibbonGroup>
					<Ribbon:RibbonGroup Header="Layout"
							SmallImageSource="pack://application:,,,/Daytimer.Images;component/Images/layout.png">
						<Ribbon:RibbonToggleButton x:Name="searchPaneButton" Label="Search Pane"
								LargeImageSource="pack://application:,,,/Daytimer.Images;component/Images/searchpane.png"
								SmallImageSource="pack://application:,,,/Daytimer.Images;component/Images/search.png"
								ToolTipTitle="Search Pane (Ctrl+F)" ToolTipDescription="Show or hide the search pane."
								Checked="searchPaneButton_Checked" Unchecked="searchPaneButton_Unchecked" />
						<Ribbon:RibbonMenuButton x:Name="todoBarButton" Label="To-Do Bar"
								LargeImageSource="pack://application:,,,/Daytimer.Images;component/Images/todobar.png"
								SmallImageSource="pack://application:,,,/Daytimer.Images;component/Images/todobar_sml.png"
								ToolTipTitle="To-Do Bar"
								ToolTipDescription="Show or hide the To-Do Bar and choose what is shown.">
							<Ribbon:RibbonGallery MaxColumnCount="1">
								<Ribbon:RibbonGalleryCategory>
									<MenuItem Header="_Calendar" Command="local:MainWindow.DockPeekCommand"
											CommandParameter="Calendar">
										<MenuItem.Icon>
											<Image VerticalAlignment="Center" HorizontalAlignment="Center"
													Stretch="None"
													Source="pack://application:,,,/Daytimer.Images;component/Images/calendar_black.png" />
										</MenuItem.Icon>
									</MenuItem>
									<MenuItem Header="_Notes" Command="local:MainWindow.DockPeekCommand"
											CommandParameter="Notes">
										<MenuItem.Icon>
											<Image VerticalAlignment="Center" HorizontalAlignment="Center"
													Stretch="None"
													Source="pack://application:,,,/Daytimer.Images;component/Images/notes_black.png" />
										</MenuItem.Icon>
									</MenuItem>
									<MenuItem Header="_People" Command="local:MainWindow.DockPeekCommand"
											CommandParameter="People">
										<MenuItem.Icon>
											<Image VerticalAlignment="Center" HorizontalAlignment="Center"
													Stretch="None"
													Source="pack://application:,,,/Daytimer.Images;component/Images/people_black.png" />
										</MenuItem.Icon>
									</MenuItem>
									<MenuItem Header="_Tasks" Command="local:MainWindow.DockPeekCommand"
											CommandParameter="Tasks">
										<MenuItem.Icon>
											<Image
													Source="pack://application:,,,/Daytimer.Images;component/Images/tasks_black.png" />
										</MenuItem.Icon>
									</MenuItem>
									<MenuItem Header="_Weather" Command="local:MainWindow.DockPeekCommand"
											CommandParameter="Weather">
										<MenuItem.Icon>
											<Image
													Source="pack://application:,,,/Daytimer.Images;component/Images/weather_black.png" />
										</MenuItem.Icon>
									</MenuItem>
								</Ribbon:RibbonGalleryCategory>
							</Ribbon:RibbonGallery>
						</Ribbon:RibbonMenuButton>
					</Ribbon:RibbonGroup>
					<Ribbon:RibbonGroup Header="Views"
							SmallImageSource="pack://application:,,,/Daytimer.Images;component/Images/normallayout_sml.png">
						<Ribbon:RibbonRadioButton x:Name="normalLayoutButton" Label="Normal View"
								LargeImageSource="pack://application:,,,/Daytimer.Images;component/Images/normallayout.png"
								SmallImageSource="pack://application:,,,/Daytimer.Images;component/Images/normallayout_sml.png"
								ToolTipTitle="Normal View"
								ToolTipDescription="Optimize the window for general viewing and editing."
								Command="Controls:ViewMode.NormalModeCommand" IsChecked="True"
								GroupName="_ribbonLayoutButtonGroup" />
						<Ribbon:RibbonRadioButton x:Name="readingLayoutButton" Label="Read Mode"
								LargeImageSource="pack://application:,,,/Daytimer.Images;component/Images/readmodelayout.png"
								SmallImageSource="pack://application:,,,/Daytimer.Images;component/Images/readmodelayout_sml.png"
								ToolTipTitle="Read Mode"
								ToolTipDescription="The best way to read a document, including some tools designed for reading instead of writing."
								Command="Controls:ViewMode.ReadModeCommand" GroupName="_ribbonLayoutButtonGroup" />
					</Ribbon:RibbonGroup>
				</Ribbon:RibbonTab>
				<!--<Ribbon:RibbonTab x:Name="apptsView" Header="VIEW" KeyTip="V">
					<Ribbon:RibbonGroup Header="Arrangement"
							SmallImageSource="pack://application:,,,/Daytimer.Images;component/Images/week_sml.png">
						<Ribbon:RibbonRadioButton Label="{Binding Label, ElementName=dayButton}"
								ToolTipTitle="{Binding ToolTipTitle, ElementName=dayButton}"
								ToolTipDescription="{Binding ToolTipDescription, ElementName=dayButton}"
								LargeImageSource="{Binding LargeImageSource, ElementName=dayButton}"
								SmallImageSource="{Binding SmallImageSource, ElementName=dayButton}"
								IsChecked="{Binding IsChecked, ElementName=dayButton}" />
						<Ribbon:RibbonRadioButton Label="{Binding Label, ElementName=weekButton}"
								ToolTipTitle="{Binding ToolTipTitle, ElementName=weekButton}"
								ToolTipDescription="{Binding ToolTipDescription, ElementName=weekButton}"
								LargeImageSource="{Binding LargeImageSource, ElementName=weekButton}"
								SmallImageSource="{Binding SmallImageSource, ElementName=weekButton}"
								IsChecked="{Binding IsChecked, ElementName=weekButton}" />
						<Ribbon:RibbonRadioButton Label="{Binding Label, ElementName=monthButton}"
								ToolTipTitle="{Binding ToolTipTitle, ElementName=monthButton}"
								ToolTipDescription="{Binding ToolTipDescription, ElementName=monthButton}"
								LargeImageSource="{Binding LargeImageSource, ElementName=monthButton}"
								SmallImageSource="{Binding SmallImageSource, ElementName=monthButton}"
								IsChecked="{Binding IsChecked, ElementName=monthButton}" />
					</Ribbon:RibbonGroup>
					<Ribbon:RibbonGroup Header="Layout"
