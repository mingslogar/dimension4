<Grid x:Class="Demo.Main.Message" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid.RowDefinitions>
		<RowDefinition Height="Auto" />
		<RowDefinition Height="Auto" />
		<RowDefinition Height="Auto" />
		<RowDefinition />
	</Grid.RowDefinitions>
	<Button x:Name="closeButton" HorizontalAlignment="Right" ToolTip="Exit the tour"
			Style="{DynamicResource CaptionButton}" Content="{DynamicResource CloseButtonKey}" Tag="2" Margin="0,3,0,0"
			Foreground="{DynamicResource WindowCaptionFocused}" Click="closeButton_Click" />
	<TextBlock x:Name="title" HorizontalAlignment="Left" Margin="30,-2,30,15" TextWrapping="Wrap"
			TextTrimming="WordEllipsis" Text="Title" FontSize="18" Grid.Row="1" />
	<TextBlock x:Name="message" HorizontalAlignment="Left" Margin="30,0,30,25" Text="Body text." TextWrapping="Wrap"
			TextTrimming="WordEllipsis" Grid.Row="2" />
	<Button x:Name="nextButton" Grid.Row="3" HorizontalAlignment="Left" Content="_Next" Margin="30,0,30,25" Height="27"
			Padding="12,0" Click="nextButton_Click" />
</Grid>
