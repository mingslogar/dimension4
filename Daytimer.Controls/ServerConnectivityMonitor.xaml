<UserControl x:Class="Daytimer.Controls.ServerConnectivityMonitor"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" d:DesignHeight="22"
		Foreground="#FFFCFDFE" Background="Transparent" Padding="8,0">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Path x:Name="xMark" Data="M 12 6 A 6 6 0 1 1 12 5.9 Z M 3 3.5 8.5 8.5 M 3.5 8.5 8.5 3.5" Stroke="#FFFCFDFE"
				StrokeThickness="1" VerticalAlignment="Center" Margin="0,0,1,0" Visibility="Collapsed" />
		<TextBlock x:Name="status" VerticalAlignment="Center" HorizontalAlignment="Left"
				TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Text="CONNECTED" Margin="4,0" Grid.Column="1" />
	</Grid>
</UserControl>
