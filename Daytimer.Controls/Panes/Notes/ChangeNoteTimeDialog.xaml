<dialog:DialogBase xmlns:Controls="clr-namespace:Daytimer.Controls"
		x:Class="Daytimer.Controls.Panes.Notes.ChangeNoteTimeDialog"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:dialog="clr-namespace:Daytimer.Dialogs;assembly=Daytimer.Dialogs" Title="Change Page Time" Height="125"
		Width="250" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" ShowInTaskbar="False" ShowActivated="True">
	<Grid Margin="10,0,10,10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Controls:TimeDropDown x:Name="timeDropDown" Height="23" Width="120" Grid.ColumnSpan="3" />
		<Button x:Name="okButton" Grid.Row="1" Grid.Column="1" Content="_OK" Margin="0,0,10,0" IsDefault="True"
				Click="okButton_Click" />
		<Button IsCancel="True" Grid.Row="1" Grid.Column="2" Content="_Cancel" />
	</Grid>
</dialog:DialogBase>
